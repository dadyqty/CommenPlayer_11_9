<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/saveimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存图片"
        android:layout_alignRight="@+id/title"
        />
    <TextView
        android:id="@+id/title"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:text="接收图片"/>
    <LinearLayout
        android:id="@+id/llmsg_show"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_msg_zhongduanhao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/recv_picture"
        android:layout_width="800px"
        android:layout_height="600px"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tv_gpsjd_rev"
        android:layout_below="@+id/recv_picture"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tv_gpswd_rev"
        android:layout_below="@+id/tv_gpsjd_rev"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tv_time_rev"
        android:layout_below="@+id/tv_gpswd_rev"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_marginLeft="30dp"
       />

</RelativeLayout>