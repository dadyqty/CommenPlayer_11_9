<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="船台号："
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="2"
            ></TextView>

        <EditText
            android:id="@+id/zhongduanhao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="输入电台号"
            android:maxLength="9"
            android:text="412888881" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="信道号："
            android:textSize="20dp"
            android:textColor="@color/black"
            ></TextView>
        <EditText
            android:id="@+id/xindaohao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:maxLength="3"
            android:text="100"
            android:hint="输入信道号"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chuanwei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="船位:"/>
        <TextView
            android:id="@+id/jindu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/weidu"
        android:layout_marginLeft="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/jindu"
        android:text=""/>

    <TextView
        android:id="@+id/xuanhuhujiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/weidu"
        android:gravity="center"
        android:textSize="25dp"
        android:text=""/>

</LinearLayout>
