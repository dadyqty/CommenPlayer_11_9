        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="张三（111111111）" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="发送短信内容一"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="222222222" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="发送短信内容二"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="张四（333333333）" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="发送短信内容三"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="444444444" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="发送短信内容四"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
