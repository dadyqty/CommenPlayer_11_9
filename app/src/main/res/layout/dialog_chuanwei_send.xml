<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="船位呼"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="船台号："
            android:textSize="25dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:theme="@style/MyEditTextStyle"
            android:layout_weight="3"
            ></TextView>

        <EditText
            android:id="@+id/chuanweihu_zhongduanhao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="输入电台号"
            android:theme="@style/MyEditTextStyle"
            android:textSize="25dp"
            android:maxLength="9"
            android:text="412888881" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chuanweihu_chuanwei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="船位:"/>
        <TextView
            android:id="@+id/chuanwei_jindu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:text="船位:"/>
    <TextView
        android:id="@+id/chuanwei_weidu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_below="@id/jindu"
        android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/chuanweihujiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/chuanwei_weidu"
        android:gravity="center"
        android:textSize="30dp"
        android:text=""/>

</LinearLayout>
