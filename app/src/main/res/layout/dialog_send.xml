<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/zhongduanhao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="9"
        android:hint="输入电台号"/>

    <EditText
        android:id="@+id/xindaohao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:hint="输入信道号"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chuanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="船位:"/>
        <TextView
            android:id="@+id/jindu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123°45' 67'' E"/>
    </LinearLayout>
    <TextView
        android:id="@+id/weidu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jindu"
        android:text="           23°45' 67'' N"/>

</LinearLayout>
