<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="位置设置"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:textColor="@color/black"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东经"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/gpsjddu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:inputType="number"
            android:theme="@style/MyEditTextStyle"
            android:textSize="30dp"
            android:hint="度"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="度"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/gpsjdfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:theme="@style/MyEditTextStyle"
            android:inputType="number"
            android:textSize="30dp"
            android:hint="分"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/gpsjdmiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:theme="@style/MyEditTextStyle"
            android:inputType="number"
            android:textSize="30dp"
            android:hint="秒"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒"
            android:textSize="30dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北纬"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/gpswddu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:theme="@style/MyEditTextStyle"
            android:inputType="number"
            android:textSize="30dp"
            android:hint="度"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="度"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/gpswdfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:theme="@style/MyEditTextStyle"
            android:inputType="number"
            android:textSize="30dp"
            android:hint="分"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/gpswdmiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:theme="@style/MyEditTextStyle"
            android:inputType="number"
            android:textSize="30dp"
            android:hint="秒"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒"
            android:textSize="30dp"

            android:textColor="@color/black"
            />

    </LinearLayout>
</LinearLayout>