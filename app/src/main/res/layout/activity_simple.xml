<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/rlyt_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.d.lib.commenplayer.CommenPlayer
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="409dp"
                android:background="@color/colorBlack" />

            <WebView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/player"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/imag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/company" />

                    <TextSwitcher
                        android:id="@+id/tv_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/imag"></TextSwitcher>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/imag2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/company" />

                    <TextSwitcher
                        android:id="@+id/tv_switcher2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/imag2"></TextSwitcher>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/imag3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/company" />

                    <TextSwitcher
                        android:id="@+id/tv_switcher3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/imag3"></TextSwitcher>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/imag4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/company" />

                    <TextSwitcher
                        android:id="@+id/tv_switcher4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/imag4"></TextSwitcher>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/imag5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/company" />

                    <TextSwitcher
                        android:id="@+id/tv_switcher5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/imag5"></TextSwitcher>
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/pad"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/statusinfo"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_margin="4dp"
                android:orientation="horizontal">

                <ImageView
                android:id="@+id/ais_power"
                android:layout_width="58dp"
                android:layout_height="29dp"/>
<!--                android:background="@drawable/a5" />-->

                <ImageView
                    android:id="@+id/video_power"
                    android:layout_width="58dp"
                    android:layout_height="29dp"/>
<!--                    android:background="@drawable/v5" />-->

                <ImageView
                    android:id="@+id/email"
                    android:layout_width="58dp"
                    android:layout_height="29dp"
                    android:background="@drawable/email" />



            </LinearLayout>

            <TextView
                android:id="@+id/rili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusinfo"
                android:gravity="center"
                android:text="日历"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/shijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rili"
                android:gravity="center"
                android:text="时间"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/nongli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shijian"
                android:gravity="center"
                android:text="农历"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/diantaihao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nongli"
                android:gravity="center"
                android:text="电台号：123456789"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/xindaohao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/diantaihao"
                android:gravity="center"
                android:text="信道号:233"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/qunhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/xindaohao"
                android:gravity="center"
                android:text="群号:233"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/chuanwei1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/qunhao"
                android:gravity="center"
                android:text="经度:122°45′67″E"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/chuanwei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chuanwei1"
                android:gravity="center"
                android:text="纬度:39°01′03″N"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/hangsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chuanwei2"
                android:gravity="center"
                android:text="航速：18海里/小时"
                android:textColor="#000000"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/hangsu"
                android:layout_marginTop="-2dp"
                android:background="@drawable/pad"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tianqiyubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴天 温度：12-20℃"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/jinjitongzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急通知：无"
                    android:textColor="#FF0000"
                    android:textSize="30dp" />
                <TextView
                    android:id="@+id/kind_of_hujiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呼叫种类：无"
                    android:textColor="#000000"
                    android:textSize="30dp"/>
                <TextView
                    android:id="@+id/hujiao_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="30dp"/>
                <TextView
                    android:id="@+id/conmiustatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通话状态：通话断开"
                    android:textColor="#000000"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/timeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通话时间：00:00:00"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/PPTanjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在接收中。。。"
                    android:textColor="#000000"
                    android:textSize="30dp" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#B0C4DE">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button1"
            android:text="选呼"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button2"
            android:text="群呼"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button3"
            android:text="信箱"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="广告"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button5"
            android:text="电话"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button6"
            android:text="亮度"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button7"
            android:text="音量"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button8"
            android:text="联系人"
            android:textSize="30dp"/>
    </LinearLayout>




</LinearLayout>
